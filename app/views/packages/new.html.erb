<h1>New package</h1>

<%= form_for (@package) do |f| %>
 
  <div class="field">
    <%= f.label :package_id %><br>
    <%= f.number_field :package_id %>
  </div> 

  <div class="field">
    <%= f.label :package_product_id %><br>
    <%= f.collection_select(:package_product_id, Product.all, :id, :product_name, promt: true) %>
  </div>

    <div class="field">
    <%= f.label :cost %><br>
    <%= f.number_field :cost %>
  </div> 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
