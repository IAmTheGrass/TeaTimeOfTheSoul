<h1>New customer</h1>
<%-# Form to make new customer -%>
<%= form_for (@customer) do |f| %>
 
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :customer_id, "Customer ID # (1000-1999)" %><br>
    <%= f.number_field :customer_id %>
  </div>  

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
